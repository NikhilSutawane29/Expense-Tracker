# ==========================================
# Server Configuration
# ==========================================
PORT=5000

# ==========================================
# Database Configuration
# ==========================================
# For Local MongoDB (Recommended for Development)
MONGODB_URI=mongodb://localhost:27017/expenseTracker

# For MongoDB Atlas (Production)
# MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/expenseTracker?retryWrites=true&w=majority

# ==========================================
# JWT Authentication
# ==========================================
# IMPORTANT: Change this to a strong, unique secret key in production!
JWT_SECRET=your_super_secure_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# ==========================================
# Node Environment
# ==========================================
# NODE_ENV=development
# NODE_ENV=production
